@model shopapp.webui.ViewModels.ProductListViewModel



@await Html.PartialAsync("_Header")



<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        @await Html.PartialAsync("_Search")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var p in Model.Products)
            {
                if (p.IsApproved == true)
                {
                    <div class="col-md-3">
                        @await Html.PartialAsync("_Products",p)
                    </div>
                }


            }
        </div>
    </div>
</div>


