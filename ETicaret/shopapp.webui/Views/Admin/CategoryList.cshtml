@model CategoryListViewModel




<div class="row">
    <div class="col-md-12">
        <h1 class="display-5">Admin Category</h1>
        <hr>
        <li class="nav-item">
            <a href="/admin/categories/create" class="btn btn-primary btn-sm">Add Category</a>
        </li>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width:30px;">Id</td>
                    <td style="">Name</td>
                    <td style=""></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/categories/@item.CategoryId" class="btn btn-primary btn-sm mr-2">
                                    Edit
                                </a>
                                <form action="CategoryDelete" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.CategoryId">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Categories</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>