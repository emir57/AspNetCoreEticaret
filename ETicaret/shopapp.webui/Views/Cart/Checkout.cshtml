@model OrderModel

<h1>Checkout</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Detail</h4>
        <form method="post" asp-controller="Cart" asp-action="Checkout">
            <input type="hidden" name="cartId" value="0">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName">FirstName</label>
                    <input asp-for="@Model.FirstName" id="" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName">LastName</label>
                    <input asp-for="@Model.LastName" id="" class="form-control">
                </div>



            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address">Address</label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City">City</label>
                    <input asp-for="@Model.City" id="" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input asp-for="@Model.Phone" id="" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email">Email</label>
                    <input asp-for="@Model.Email" id="" class="form-control">
                </div>
            </div>
            <hr class="mb-3">
            
            <h4 class="mb-3">Payment Detail</h4>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName">Card Name</label>
                    <input asp-for="@Model.CardName" id="" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber">Card Number</label>
                    <input asp-for="@Model.CardNumber" id="" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth">Expiration Month</label>
                    <input asp-for="@Model.ExpirationMonth" id="" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear">Expiration Year</label>
                    <input asp-for="@Model.ExpirationYear" id="" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvc">Cvc</label>
                    <input asp-for="@Model.Cvc" id="" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Summary Information</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Name</h6>
                        @* <small class="text-muted">@item.Description</small> *@
                    </div>
                    <span class="text-muted">@item.Price.ToString("c")</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total(TL)</span>
                <strong>@Model.CartModel.TotalPrice().ToString("c") TL</strong>
            </li>
        </ul>

    </div>
</div>